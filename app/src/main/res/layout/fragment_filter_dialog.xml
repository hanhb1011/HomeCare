<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:text="필터"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Switch
            android:id="@+id/filter_switch"
            android:textSize="18dp"
            android:textColor="#333333"
            android:text=" 필터 활성화 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/filter_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#383838"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            tools:ignore="Suspicious0dp" />


        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="위치"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:entries="@array/locations"
                android:id="@+id/loaction_spinner_in_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="급여"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/min_pay_edit_in_filter"
                android:layout_width="70dp"
                android:textSize="15dp"
                android:maxLength="4"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"/>
            <TextView
                android:text="이상"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/max_pay_edit_in_filter"
                android:textAlignment="center"
                android:maxLength="4"
                android:textSize="15dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:nextFocusDown="@id/cancel_button_in_filter"
                android:layout_marginRight="5dp" />
            <TextView
                android:text="이하"
                android:layout_width="35dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="기간"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/start_date_in_filter"
                android:layout_width="80dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/start_date_pick_button_in_filter"
                android:background="@drawable/date_pick_button_image1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp" />
            <TextView
                android:textStyle="bold"
                android:text=" ~ "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/end_date_in_filter"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/end_date_pick_button_in_filter"
                android:background="@drawable/date_pick_button_image1"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="타입"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:entries="@array/home_care_types"
                android:id="@+id/type_spinner_in_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#383838"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/cancel_button_in_filter"
        android:background="@android:color/transparent"
        android:text="확인"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>