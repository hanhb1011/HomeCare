<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.homecare.Activities.RatingActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <Button
        android:id="@+id/back_button_in_activity_rating"
        android:background="@drawable/back_button_image1"
        android:layout_width="60dp"
        android:layout_height="50dp" />

    <TextView
        android:textColor="#000000"
        android:textSize="30sp"
        android:textAlignment="center"
        android:text="평가를 해주세요!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="서로에 대한 평가를 남깁니다."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textAlignment="center"
            android:text="친절함"
            android:textSize="17sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RatingBar
            android:id="@+id/kindness_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="0" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:text="일처리"
            android:textSize="17sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/wellness_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:text="성실함"
            android:textSize="17sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/faithfulness_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="0" />
    </LinearLayout>

    <EditText
        android:gravity="start"
        android:id="@+id/comment_edit_text_in_rating"
        android:textSize="16sp"
        android:hint="한마디"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:maxLength="100"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:layout_margin="10dp"
        android:id="@+id/submit_button_in_rating"
        android:textSize="18dp"
        android:text="제출하기"
        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
