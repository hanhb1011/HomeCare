<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:textSize="28dp"
        android:text="홈케어 등록"
        android:textAlignment="center"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#383838"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="제목"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:maxLines="1"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:textSize="15sp"

            android:id="@+id/title_edit_text_in_creation"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="위치"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:entries="@array/locations"
            android:id="@+id/loaction_spinner_in_creation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="급여"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textSize="15sp"
            android:id="@+id/pay_edit_text_in_creation"
            android:nextFocusDown="@id/comment_edit_text_in_creation"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:text="(만원)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="기간"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/start_date_in_creation"
            android:text="2017-11-09"
            android:layout_width="80dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/start_date_pick_button_in_creation"
            android:background="#000000"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp" />
        <TextView
            android:textStyle="bold"
            android:text=" ~ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/end_date_in_creation"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp" />
        <Button
            android:id="@+id/end_date_pick_button_in_creation"
            android:background="#000000"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="타입"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:entries="@array/home_care_types"
            android:id="@+id/type_spinner_in_creation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:hint="상세내용 (500자 이내)"
        android:id="@+id/comment_edit_text_in_creation"
        android:gravity="start"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#383838"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/submit_button_in_home_care_addition"
            android:background="@android:color/transparent"
            android:text="등록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/back_button_in_activity_home_care_addition"
            android:background="@android:color/transparent"
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
